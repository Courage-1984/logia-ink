{
  "name": "logi-ink",
  "version": "2.1.0",
  "description": "Logi-Ink - Digital Innovation & Creative Solutions",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:gh-pages": "cross-env VITE_BASE_PATH=./ VITE_DISABLE_SW=true vite build",
    "build:gh-pages:ci": "cross-env VITE_BASE_PATH=./ VITE_DISABLE_SW=true vite build --outDir dist-gh-pages",
    "build:dual": "npm run build && npm run build:gh-pages:ci",
    "preview": "vite preview",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,json,md}\"",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "validate": "npm run format:check && npm run lint",
    "clean": "rm -rf dist node_modules/.vite",
    "optimize-images": "node scripts/optimize-images.js",
    "optimize-video": "node scripts/optimize-video.js",
    "convert-poster": "node scripts/convert-poster-formats.js",
    "responsive-images": "node scripts/generate-responsive-images.js",
    "subset-fonts": "node scripts/subset-fonts.js",
    "inline-critical-css": "node scripts/inline-critical-css.js",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "reports:lighthouse": "lhci collect --config=./lighthouserc.json",
    "reports:pwmetrics": "node scripts/generate-pwmetrics-report.js",
    "reports:pa11y": "node scripts/run-pa11y-report.js",
    "reports:dashboard": "node scripts/generate-dashboard-reports.js",
    "reports:coverage": "node scripts/generate-coverage-report.js",
    "reports:performance": "node scripts/generate-performance-timeline.js",
    "reports:media": "node scripts/generate-media-inventory.js",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:only": "playwright test",
    "reports:all": "npm run build && npm run reports:dashboard && npm run reports:media && npm run test:e2e:only && npm run reports:coverage && npm run reports:performance && npm run build",
    "reports:all:dual": "npm run reports:all && npm run build:gh-pages:ci"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.49.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.1",
    "glob": "^11.0.3",
    "pa11y": "^9.0.1",
    "pa11y-reporter-html": "^2.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "pwmetrics": "^4.1.5",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.32.6",
    "terser": "^5.44.1",
    "vite": "^7.2.2",
    "vite-plugin-compression": "^0.5.1"
  },
  "dependencies": {
    "web-vitals": "^5.1.0"
  }
}
