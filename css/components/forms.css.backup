select.variant-pink:focus-visible {
  outline-color: var(--accent-pink);
  box-shadow: 0 0 10px var(--glow-pink);
}

/* Placeholder Color Variants */
input.magenta::placeholder,
input.variant-magenta::placeholder,
textarea.magenta::placeholder,
textarea.variant-magenta::placeholder {
  color: rgba(255, 0, 255, 0.4);
}

input.green::placeholder,
input.variant-green::placeholder,
textarea.green::placeholder,
textarea.variant-green::placeholder {
  color: rgba(0, 255, 0, 0.4);
}

input.blue::placeholder,
input.variant-blue::placeholder,
textarea.blue::placeholder,
textarea.variant-blue::placeholder {
  color: rgba(0, 102, 255, 0.4);
}

input.pink::placeholder,
input.variant-pink::placeholder,
textarea.pink::placeholder,
textarea.variant-pink::placeholder {
  color: rgba(255, 0, 128, 0.4);
}
